SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
EMAIL_LOGIN="your-email@example.com"
EMAIL_PASSWORD="your-app-password"
OPENAI_API_KEY="your-openai-api-key"
RECIPIENTS="test@example.com"

# AI 관련성 필터링 설정
# ENABLE_RELEVANCE_FILTER: AI 기반 관련성 필터링 활성화 여부 (true/false)
# - true: GPT-4o-mini로 뉴스와 회사 사업의 관련성 평가 후 필터링
# - false: 키워드 매칭과 중복 제거만 수행
ENABLE_RELEVANCE_FILTER="true"

# RELEVANCE_THRESHOLD: 관련성 점수 임계값 (0-10)
# - 10: 회사의 핵심 사업에 직접 관련된 뉴스만
# - 7-9: 사업 분야와 밀접한 뉴스
# - 6: 산업/시장과 간접적으로 관련된 뉴스까지 포함 (권장)
# - 4-5: 더 넓은 범위의 뉴스 포함
# - 0-3: 거의 모든 뉴스 포함
RELEVANCE_THRESHOLD="6"

# BETA_TEST_MODE: 베타 테스트 모드 (true/false)
# - true: 필터링될 뉴스도 이메일에 포함하되 [관련성 낮음 - 필터링 예정] 태그 표시
#   → 필터링 품질을 확인하고 피드백 수집 가능
# - false: 임계값 미만 뉴스는 완전히 제외 (정식 운영 모드)
BETA_TEST_MODE="true" 
